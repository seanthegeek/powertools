          <eaf_modules>chrome_child.dll</eaf_modules>
        </Mitigation>
	
      </Version>
    </Product>

    <Product Name="Google Talk">
      <Version Arch="x86" Path="*\Google\Google Talk\googletalk.exe">
        <Mitigation Name="DEP" Enabled="false" />
        <Mitigation Name="SEHOP" Enabled="true" MinOS="6.1"/>
      </Version>
    </Product>
  </Vendor>

